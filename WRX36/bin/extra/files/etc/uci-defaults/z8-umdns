#!/bin/sh

{ [ -f /etc/config/umdns ] && ! [ "$(cat /etc/config/umdns)" = "$(cat /rom/etc/config/umdns)" ]; } || {
uci batch <<'EOF'
delete umdns.@umdns[0]
set umdns.@umdns[0]=umdns
set umdns.@umdns[0].jail='1'
add_list umdns.@umdns[0].network="'lan'"
add_list umdns.@umdns[0].network="'IoT'"

EOF
uci commit umdns
}
exit 0
