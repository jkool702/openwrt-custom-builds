
config wifi-device 'radio0'
	option type 'mac80211'
	option path 'platform/soc@0/c000000.wifi'
	option band '5g'
	option channel '161'
	option htmode 'HE80'
	option country 'US'
	option country_ie '1'
	option cell_density '0'
	option txpower '30'
	option diversity '1'
	option disabled '0'

config wifi-device 'radio1'
	option type 'mac80211'
	option path 'platform/soc@0/c000000.wifi+1'
	option band '2g'
	option channel '2'
	option htmode 'HE40'
	option country 'US'
	option country_ie '1'
	option cell_density '0'
	option txpower '30'
	option diversity '1'
	option disabled '0'
	option noscan '1'

config wifi-iface 'lan_radio0'
	option device 'radio0'
	option mode 'ap'
	option ssid 'OpenWrt_WiFi'
	option encryption 'psk2+ccmp'
	option network 'lan'
	option ieee80211r '1'
	option ieee80211w '1'
	option ieee80211k '1'
	option ft_psk_generate_local '1'
	option ft_over_ds '0'
	option na_mcast_to_ucast '1'
	option wnm_sleep_mode '1'
	option wnm_sleep_mode_no_keys '1'
	option bss_transition '1'
	option reassociation_deadline '8192'
	option proxy_arp '1'
	option multicast_to_unicast_all '1'
	option key 'password'
#	option time_advertisement '2'
#	option time_zone ''

config wifi-iface 'lan_radio1'
	option device 'radio1'
	option mode 'ap'
	option ssid 'OpenWrt_WiFi'
	option encryption 'psk2+ccmp'
	option network 'lan'
	option ieee80211r '1'
	option ieee80211w '1'
	option ieee80211k '1'
	option ft_psk_generate_local '1'
	option ft_over_ds '0'
	option na_mcast_to_ucast '1'
	option wnm_sleep_mode '1'
	option wnm_sleep_mode_no_keys '1'
	option bss_transition '1'
	option reassociation_deadline '8192'
	option proxy_arp '1'
	option multicast_to_unicast_all '1'
	option key 'password'
#	option time_advertisement '2'
#	option time_zone ''

